<com.mohitkanwal.weatheroo.ui.locationinput.LocationInputView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:orientation="vertical">

	<AutoCompleteTextView
		android:id="@+id/autoCompleteTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="54dp"
		android:ems="10"
		android:hint="@string/txt_enter_country_state" />

	<Button
		android:id="@+id/btn_choose_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/txt_choose_image" />

	<TextView
		android:id="@+id/location_data"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp" />
</com.mohitkanwal.weatheroo.ui.locationinput.LocationInputView>
