<com.mohitkanwal.weatheroo.ui.home.WHomeView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ImageView
		android:id="@+id/img_main"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:src="@drawable/cloud" />

	<TextView
		android:id="@+id/txtLocationName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="@string/txt_enter_country_state" />

	<TextView
		android:id="@+id/txtWeatherStatus"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="@string/txt_enter_country_state" />

	<TextView
		android:id="@+id/txtTemp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="@string/txt_enter_country_state" />
</com.mohitkanwal.weatheroo.ui.home.WHomeView>
